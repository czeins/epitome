        <div id="bgLogin">
            <form class="form-inline">
              <div class="form-group">
                <input type="text" class="form-control input-lg" id="exampleInputName2" placeholder="email">
              </div>
              <div class="form-group">
                <input type="email" class="form-control input-lg" id="exampleInputEmail2" placeholder="password">
              </div>
              <div class="form-group">
                <input type="email" class="form-control input-lg" id="exampleInputEmail2" placeholder="password">
              </div>
              <button type="submit" class="btn btn-default btn-lg">Sign up</button>
            </form>
        </div>
    </div>

</div>
