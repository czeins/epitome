<div class="bgMain">

    <div class="bgColor">
    </div>

    <div class="btn btn-lg btn-primary bgSignin" data-toggle="modal" data-target="#myModal">Sign in</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Please sign in:</h4>
      </div>

      <!-- Sign in for modal body -->
      <div class="modal-body">
        <%= form_for(:session, url: "/login") do |f| %>
            <%= f.email_field :email, class: "form-control input-lg", placeholder: "email"%> <br />
            <%= f.password_field :password, class: "form-control input-lg", placeholder: "password" %>
      </div>
      <!-- Submit for modal body -->
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Sign in", class: "btn btn-primary" %>
      </div>
        <% end %>
    </div>
  </div>
</div>

    <div class="bgCenter">
        <h1 id="bgLogo" class="bgH1">epitome</h1>
        <h2 id="bgLogline" class="bgH1">Résumés that don't suck.</h2>
        <br>
        <div id="bgLogin">
            <%= form_for @user, :html => {class: 'form-inline'} do |f|%>
                <div class="form-group">
                  <%= f.email_field :email, class: "form-control input-lg", placeholder: "email"%>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, class: "form-control input-lg", placeholder: "password" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password_confirm, class: "form-control input-lg", placeholder: "confirm password" %>
                </div>
                <button type="submit" class="btn btn-default btn-lg">Sign up</button>
              <% end %>

        </div>
    </div>

</div>
