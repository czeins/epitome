<h1>Welcome! Please sign up if you haven't already.</h1>

    <%= form_for @user do |f| %>
        <form>
            <label for="inputEmail">email</label>
            <%= f.email_field :email %>

            <label for="inputPW">password</label>
            <%= f.password_field :password %>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    <% end %>
