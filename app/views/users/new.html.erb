<div class="bgMain">

    <div class="bgColor">
    </div>

    <div class="btn btn-lg btn-primary bgSignin" data-toggle="modal" data-target="#myModal">Sign in</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
<h1>Welcome! Please sign up if you haven't already.</h1>

    <%= form_for @user do |f| %>
        <form>
            <label for="inputEmail">email</label>
            <%= f.email_field :email %>

            <label for="inputPW">password</label>
            <%= f.password_field :password %>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

    <div class="bgCenter">
        <h1 id="bgLogo" class="bgH1">epitome</h1>
        <h2 id="bgLogline" class="bgH1">Résumés that don't suck.</h2>
        <br>
        <div id="bgLogin">
            <form class="form-inline">
              <div class="form-group">
                <input type="text" class="form-control input-lg" id="exampleInputName2" placeholder="email">
              </div>
              <div class="form-group">
                <input type="email" class="form-control input-lg" id="exampleInputEmail2" placeholder="password">
              </div>
              <button type="submit" class="btn btn-default btn-lg">Sign up</button>
            </form>
        </div>
    </div>

</div>
